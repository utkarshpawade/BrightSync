{
  "name": "brightsync",
  "version": "1.0.0",
  "description": "Cross-Display Brightness Synchronizer for Windows",
  "main": "./dist/main/main.js",
  "author": "BrightSync Team",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build:native": "node-gyp rebuild",
    "build:ts": "tsc --project tsconfig.main.json",
    "build:renderer": "esbuild src/renderer/app.tsx --bundle --outfile=dist/renderer/app.js --external:electron --platform=browser --target=es2020 && node -e \"require('fs').copyFileSync('src/renderer/index.html', 'dist/renderer/index.html'); require('fs').copyFileSync('src/renderer/styles.css', 'dist/renderer/styles.css');\"",
    "build": "npm run clean && npm run build:ts && npm run build:renderer && npm run build:native",
    "dev": "npm run build && electron .",
    "dev:admin": "powershell -ExecutionPolicy Bypass -File ./run-admin.ps1",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:admin": "powershell -ExecutionPolicy Bypass -File ./build-dist-admin.ps1",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:native": "cd native/tests && cmake -S . -B build && cmake --build build && ctest --test-dir build --output-on-failure",
    "test:all": "node scripts/test-all.js",
    "test:unit": "jest --testPathPattern=\"sync_algorithm|edge_cases\"",
    "test:ipc": "jest --testPathPattern=ipc.test",
    "test:integration": "jest --testPathPattern=integration.test",
    "test:stress": "jest --testPathPattern=stress.test",
    "test:logs": "jest --testPathPattern=log_validation.test"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "esbuild": "^0.19.11",
    "jest": "^29.7.0",
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.brightsync.app",
    "productName": "BrightSync",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "build/Release/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BrightSync"
    }
  },
  "gypfile": true
}
